<?xml version="1.0"?>
<launch>

  <!-- Run the map server -->
  <node name="map_server" pkg="map_server" type="map_server" args="$(find summit_xl_2dnav)/maps/willow_garage/willow_garage.yaml"/>

  <!--- Run AMCL -->
  <include file="$(find summit_xl_2dnav)/launch/navigation_amcl/amcl_summit.launch" />
  <remap from="cmd_vel" to="summit_xl/robot_control/command" />

  <!--- Run EFK Filter -->
<!--
	<include file="$(find summit_xl_2dnav)/summit_xl_ekf.launch" />
-->
  
  <!-- Run move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
	<remap from="odom" to="summit_xl/odom"/>
	<rosparam file="$(find summit_xl_2dnav)/config_navigation/move_base_params.yaml" command="load" />
	<rosparam file="$(find summit_xl_2dnav)/config_navigation/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find summit_xl_2dnav)/config_navigation/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find summit_xl_2dnav)/config_navigation/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find summit_xl_2dnav)/config_navigation/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find summit_xl_2dnav)/config_navigation/global_costmap_params_map.yaml" command="load" />
  </node>
  
  
  <!-- Rviz -->
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find summit_xl_2dnav)/config_rviz/move_base.rviz"/>
  
</launch>
