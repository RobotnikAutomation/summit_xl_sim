    <parent link="bh_finger_22_link"/>
    <child link="bh_finger_23_link"/>
	<origin xyz="0 0 0.070" rpy="0 0 1.57079633" />
	<axis xyz="1 0 0"/>
    <limit effort="${joint_effort_limit}" lower="0.7330" upper="1.5708" velocity="${joint_velocity_limit}"/>
